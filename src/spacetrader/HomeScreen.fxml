<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spacetrader.system.HomeScreenController">
   <children>
      <ImageView fitHeight="438.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/images/space%20image.jpg" />
         </image>
      </ImageView>
      <GridPane prefHeight="438.0" prefWidth="601.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" opacity="0.71" prefHeight="60.0" prefWidth="100.0" GridPane.valignment="TOP">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/spaceship.jpg" />
                     </image></ImageView>
               </graphic>
               <effect>
                  <Bloom threshold="0.0" />
               </effect>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" prefHeight="114.0" prefWidth="216.0" text="Go to Shipyard" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/shipyard.png" />
                     </image></ImageView>
               </graphic>
               <font>
                  <Font name="Copperplate Gothic Bold" size="12.0" />
               </font>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToMarket" prefHeight="145.0" prefWidth="184.0" text="Go to Marketplace" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <graphic>
                  <ImageView fitHeight="107.0" fitWidth="168.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/marketplace.jpg" />
                     </image></ImageView>
               </graphic>
               <font>
                  <Font name="Copperplate Gothic Bold" size="12.0" />
               </font>
            </Button>
            <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" prefHeight="144.0" prefWidth="167.0" text="Go to Stockmarket" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <graphic>
                  <ImageView fitHeight="118.0" fitWidth="208.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/stockmarket.jpg" />
                     </image></ImageView>
               </graphic>
               <font>
                  <Font name="Copperplate Gothic Bold" size="12.0" />
               </font>
            </Button>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="playerName" alignment="CENTER" text="Player Name" textFill="#00ff51">
                     <font>
                        <Font name="Copperplate Gothic Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label fx:id="planetName" alignment="CENTER" text="Planet Name" textFill="#13ebba">
                     <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
